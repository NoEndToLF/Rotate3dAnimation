<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/animFl">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="30dp"
        android:layout_height="500dp"
        android:background="@drawable/bg_shape_negative"
        android:gravity="center"
        android:id="@+id/negativeLl"
        android:visibility="visible"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:id="@+id/negativeTv"
            android:textColor="@color/white"
            android:text="身体健康\n\n万事如意"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="30dp"
        android:layout_height="500dp"
        android:background="@drawable/bg_shape_positive"
        android:gravity="center"
        android:id="@+id/positiveLl"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:id="@+id/positiveTv"
            android:textColor="@color/black"
            android:text="新年寄语"/>
    </LinearLayout>
</FrameLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:id="@+id/openBtn"
        android:layout_height="wrap_content"
        android:text="打开"/>
    <Button
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:id="@+id/closeBtn"
        android:layout_height="wrap_content"
        android:text="关闭"/>
</LinearLayout>
</LinearLayout>
</layout>